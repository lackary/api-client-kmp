{
  "name": "your-kmp-project-automation",
  "version": "0.0.0",
  "private": true,
  "description": "Automation configuration for KMP project.",
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/exec": "^6.0.3",
    "@semantic-release/git": "^12.0.1",
    "@semantic-release/github": "^10.0.6",
    "semantic-release": "^24.0.0"
  },
  "release": {
    "branches": [
      "main",
      {
        "name": "staging",
        "prerelease": "beta"
      }
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      [
        "@semantic-release/exec",
        {
          "publishCmd": "gradle setBuildVersion -PnewVersion=${nextRelease.version} -PbuildNumber=${process.env.GITHUB_RUN_NUMBER}"
        }
      ],
      [
        "@semantic-release/git",
        {
          "assets": ["package.json", "package-lock.json", "CHANGELOG.md"],
          "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
        }
      ],
      "@semantic-release/github"
    ]
  }
}